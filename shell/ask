// Required parameters:
// @raycast.schemaVersion 1
// @raycast.title Ask Quick Question
// @raycast.mode fullOutput

// Optional parameters:
// @raycast.icon https://openai.com/favicon.ico
// @raycast.packageName ChatGPT
// @raycast.argument1 { "type": "text", "placeholder": "Question?" }

import { runLogin, runNonLogin } from "./0";

if (process.argv[2]) await runLogin(`ask.py`, `--question "${process.argv[2]}"`);
else await runLogin("ask.py");
